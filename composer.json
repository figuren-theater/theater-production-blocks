{
    "name": "figuren-theater/theater-production-blocks",
    "description": "WordPress blocks for theater productions to be used with the Site- and Block-Editor.",
    "license": "GPL-3.0+",
    "type": "wordpress-plugin",
    "keywords": [
        "wordpress",
        "wordpress-plugin",
        "theater",
        "blocks",
        "gutenberg"
    ],
    "authors": [
        {
            "name": "figuren.theater",
            "email": "info@figuren.theater"
        },
        {
            "name": "Carsten Bach",
            "email": "mail@carsten-bach.de",
            "homepage": "https://carsten-bach.de",
            "role": "Developer"
        }
    ],
    "homepage": "https://websites.fuer.figuren.theater",
    "support": {
        "email": "info@figuren.theater",
        "issues": "https://github.com/figuren-theater/theater-production-blocks/issues",
        "source": "https://github.com/figuren-theater/theater-production-blocks"
    },
    "require-dev": {
        "figuren-theater/code-quality": "^0.8.1"
    },
    "suggest": {
        "wpackagist-plugin/theater": "Even this plugin can be used standalone, it will be nicer & easier together with the WordPress 'Theater' plugin."
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "autoload": {
        "classmap": [
            "inc/"
        ],
        "files": [
            "inc/block-loading/namespace.php",
            "inc/registration/namespace.php",
            "inc/namespace.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "phpstan/extension-installer": true,
            "ergebnis/composer-normalize": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    }
}
